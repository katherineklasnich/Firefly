<h2 class="new-page-title">Add a new camera</h2>

<div class="new-item-form">
    <%= form_for [@camera] do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :brand %>
    <%= f.text_field :price %>
    <%= f.text_area :description, :size => "60x12"%>
    <%= f.text_field :address %>
    <%= select_date Date.today, :prefix => :start_date %>
    <%= f.date_select :end_date %>
  <!-- <div class="photo-upload">
    <% form_tag({:action => :upload}, :multipart => true) do %>
      <%= file_field_tag 'photo' %>
    <% end %> -->
    <%# f.input :photo %>
    <%# f.input :photo_cache, as: :hidden %>
  </div>
  <div class="form-inline" style="justify-content:space-between;">
    <%= link_to 'Back', cameras_path, class: "btn btn-primary float-left" %>
    <%= f.submit "Add", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>


