<!-- NAVBAR IMPORTED-->
<h2 class="new-page-title">Add a new camera</h2>

<div class="new-item-form">
  <%= simple_form_for [@camera] do |f| %>
    <div class="form-inline" style="justify-content:space-between;">
      <div style="width: 48%">
        <%= f.input :name %>
      </div>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.input :brand %>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.input :price %>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.input :description %>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.input :address %>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.date_select :start_date %>
      <%= f.date_select :end_date %>
    </div>
    <div class="form-inline" style="justify-content:space-between;">
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    <div class="form-inline" style="justify-content:space-between;">
      <%= link_to 'Back', cameras_path, class: "btn btn-primary float-left" %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>


