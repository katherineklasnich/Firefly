<h2 class="new-page-title">Ok, let's create you item..</h2>
<div class="container-camera">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-6 col-sm-2 d-flex flex-wrap justify-content-center p-3 m-3">
        <%= simple_form_for [@camera] do |f| %>
          <%= f.input :name %>
          <%= f.input :brand %>
          <%= f.input :price %>
          <%= f.input :description %>
          <%= f.input :address %>
          <%= f.date_select :start_date %>
          <%= f.date_select :end_date %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "Add", class: "btn btn-primary" %>
          <%= link_to 'Back', cameras_path, class: "btn btn-primary float-left" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
